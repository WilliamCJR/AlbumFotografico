<%- include("template/cabecera",{tituloWeb:"AlbumFotografico"})%>
<body onload="estado_botones_5()" class="Estilofondo">
    <%- include("template/plantilla_nav")%>
    <br>
     <br>
     <br>
     
    <div class="row row-cols-1 row-cols-md-3 g-4" >
      <% arr.forEach(function(foto) { cont = cont + 1; var identificador = "id"+cont.toString() %>
      <div class="col" >
        <div class="card h-100 text-bg-dark text-center" >
          <img src="<%= foto.url %>" class="card-img-top" alt="..." style="width: 100%; height : 250px;">
          <div class="card-body">
            <h5 class="card-title"><%= foto.nombre %></h5>
            <a  class="btn btn-primary">
              <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#<%= identificador %>" >
                Saber mas
              </button>
          </a>
          </div>
          
        </div>
      </div>
      <div class="modal fade " id="<%= identificador %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog ">
          <div class="modal-content ">
            <div class="modal-header ">
              <h3 class="modal-title fs-5 titulo2" id="exampleModalLabel" ><%= foto.nombre %></h3>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" ></button>
              
            </div>
            <div class="modal-body">
              <img id = "imagen_modal" src="<%= foto.url %>" style="width: 470px;
            height: 300px;">
            <br>
            <br>
            <p><%= foto.descripcion %></p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
   

      <% }); %>
    </div>
    
   

</body>

</html>








